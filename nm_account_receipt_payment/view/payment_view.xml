<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<!-- Payment -->
		<record id="view_account_payment_form_inh" model="ir.ui.view">
			<field name="name">account.payment.form.inherit</field>
			<field name="model">account.payment</field>
			<field name="inherit_id"
				ref="account.view_account_payment_form" />
			<field name="arch" type="xml">
				<field name="payment_type" position="after">
					<field name="not_contact" attrs="{'invisible': [('is_internal_transfer','!=',False)]}" />
				</field>
				<field name="partner_id" position="after">
					<field name="destination_account_id"  attrs="{'readonly':[('state', '!=', 'draft')],'invisible':[ ('is_internal_transfer', '=', True)]}"/>
					<field name="available_account_ids" invisible="1"/>
				</field>
			</field>
		</record>
		<record id="view_payment_search_inh" model="ir.ui.view">
			<field name="name">account.payment.search.inherit</field>
			<field name="model">account.payment</field>
			<field name="inherit_id"
				ref="account.view_account_payment_search" />
			<field name="arch" type="xml">
				<filter name="state_draft" position="before">
					<filter string="Without Contact" name="not_contact"
						domain="[('not_contact','=',True)]" />
					<separator />
				</filter>
			</field>
		</record>



	</data>
</odoo>