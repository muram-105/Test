<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
         <xpath expr="//div[hasclass('pos-receipt')]" position="replace">
        	<div class="pos-receipt">
	            <t t-if="receipt.company.logo">
	                <img class="pos-receipt-logo" t-att-src="receipt.company.logo" alt="Logo"/>
	                <br/>
	            </t>
	            <t t-if="!receipt.company.logo">
	                <h2 class="pos-receipt-center-align">
	                    <t t-esc="receipt.company.name" />
	                </h2>
	                <br/>
	            </t>
	            <div class="pos-receipt-contact">
	                <t t-if="receipt.company.contact_address">
	                    <div><t t-esc="receipt.company.contact_address" /></div>
	                </t>
	                <t t-if="receipt.company.phone">
	                    <div>Tel:<t t-esc="receipt.company.phone" /></div>
	                </t>
	                <t t-if="receipt.company.vat">
	                    <div><t t-esc="receipt.company.vat_label"/>:<t t-esc="receipt.company.vat" /></div>
	                </t>
	                <t t-if="receipt.company.email">
	                    <div><t t-esc="receipt.company.email" /></div>
	                </t>
	                <t t-if="receipt.company.website">
	                    <div><t t-esc="receipt.company.website" /></div>
	                </t>
	                <t t-if="receipt.header_html">
	                    <t t-raw="receipt.header_html" />
	                </t>
	                <t t-if="!receipt.header_html and receipt.header">
	                    <div style="white-space:pre-line"><t t-esc="receipt.header" /></div>
	                </t>
	                <t t-if="receipt.cashier">
	                    <div class="cashier">
	                        <div>--------------------------------</div>
	                        <div style="float: left;">Served by</div>
	                        <t class="text-left" t-esc="receipt.cashier" />
	                        <div style="float: right;">البائع </div>
	                    </div>
	                </t>
	                <br/>
					<div class="cashier">
		                <div style="float: left;">Order #</div>
		                <t class="text-left" t-esc="receipt.name" />
		                <div style="float: right;">رقم الطلب </div>
					</div>
		             <br/>
		             <div class="cashier">
		                <t t-if="receipt.date.localestring">
		                    <div style="float: left;">Date </div>
		                    <t class="text-left" t-esc="receipt.date.localestring" />
		                    <div style="float: right;">التاريخ </div>
		                </t>
		                <t t-else="">
		                    <div style="float: left;">Date </div>
		                    <t class="text-left" t-esc="receipt.date.validation_date" />
		                    <div style="float: right;">التاريخ </div>
		                </t>
		            </div>
	            </div>
	            <br /><br />
	
	            <!-- Orderlines -->
	
	            <div class="orderlines">
	                <t t-call="OrderLinesReceipt"/>
	            </div>
	
	            <!-- Subtotal -->
	
	            <t t-if="!isTaxIncluded">
	                <div class="pos-receipt-right-align">--------</div>
	                <br/>
	                <div>Subtotal<span t-esc="env.pos.format_currency(receipt.subtotal)" class="pos-receipt-right-align"/></div>
	                <t t-foreach="receipt.tax_details" t-as="tax" t-key="tax.name">
	                    <div class="responsive-price">
	                        <t t-esc="tax.name" />
	                        <span t-esc='env.pos.format_currency_no_symbol(tax.amount)' class="pos-receipt-right-align"/>
	                    </div>
	                </t>
	            </t>
	
	            <!-- Total -->
	            <br/>
	            <div class="pos-receipt-contact">
	            	<t>
	            		<div class="cashier">
			                <div style="float: left;width:25%;text-align:left;">TOTAL QTY</div>
			                <t style="text-align:right;" t-esc="receipt.tot_qty"/>
			                <div style="float: right;width:25%;text-align:right;">مجموع الكميات </div>
			             </div>
			             <br/>
			        </t>
	            	<t>
	            		<div class="cashier">
			                <div style="float: left;width:25%;text-align:left;">TOTAL</div>
			                <t style="text-align:right;" t-esc="env.pos.format_currency(receipt.total_with_tax)"/>
			                <div style="float: right;width:25%;text-align:right;">المجموع </div>
			             </div>
			             <br/>
		            <t t-if="receipt.total_rounded != receipt.total_with_tax">
		                <div class="pos-receipt-amount">
		                  Rounding
		                <span t-esc='env.pos.format_currency(receipt.rounding_applied)' class="pos-receipt-right-align"/>
		                </div>
		                <div class="pos-receipt-amount">
		                  To Pay
		                 <span t-esc='env.pos.format_currency(receipt.total_rounded)' class="pos-receipt-right-align"/>
		              </div>
		            </t>
		            <br/>
		
		            <!-- Payment Lines -->
		
		            <t t-foreach="receipt.paymentlines" t-as="line" t-key="line.cid">
		            	<div class="cashier">
			                <div style="float: left;width:25%;text-align:left;" t-esc="line.name" />
		                    <span style="text-align:right;" t-esc="env.pos.format_currency(line.amount)"/>
			                <div style="float: right;width:25%;text-align:right;" t-esc="line.name_ar"/>
			             </div>
			             <br/>
		            </t>
		            <t>
		            <div class="cashier">
		                <div style="float: left;width:25%;text-align:left;">CHANGE</div>
		                <span style="text-align:right;" t-esc="env.pos.format_currency(receipt.change)"/>
		                <div class="text-right" style="float: right;width:25%;text-align:right;">الباقي</div>
		            </div>
		            <br/>
		            <!-- Extra Payment Info -->
		            <t t-if="receipt.total_discount">
		                <div class="cashier">
		                	<div style="float: left;width:25%;text-align:left;">Discounts</div>
		                    <span style="text-align:right;" t-esc="env.pos.format_currency(receipt.total_discount)"/>
		                	<div class="text-right" style="float: right;width:25%;text-align:right;">الخصم</div>
		                </div>
		                <br/>
		            </t>
		            <t t-if="isTaxIncluded">
		                <t t-foreach="receipt.tax_details" t-as="tax" t-key="tax.name">
		                    <div>
		                        <t t-esc="tax.name" />
		                        <span t-esc="env.pos.format_currency_no_symbol(tax.amount)" class="pos-receipt-right-align"/>
		                    </div>
		                </t>
		                <div class="cashier">
		                	<div style="float: left;width:25%;text-align:left;">Total Taxes</div>
		                    <span style="text-align:right;" t-esc="env.pos.format_currency(receipt.total_tax)"/>
		                	<div class="text-right" style="float: right;width:25%;text-align:right;">مجموع القيمة المضافة</div>
		                </div>
		            	<br/>
		            </t>
		            </t>
	            </t>
	            </div>
	
	            <div class="before-footer" />
	
	            <!-- Footer -->
	            <div t-if="receipt.footer_html"  class="pos-receipt-center-align">
	                <t t-raw="receipt.footer_html" />
	            </div>
	
	            <div t-if="!receipt.footer_html and receipt.footer"  class="pos-receipt-center-align" style="white-space:pre-line">
	                <br/>
	                <t t-esc="receipt.footer" />
	                <br/>
	                <br/>
	            </div>
	            <div class="pos-receipt-contact">
		            <br/>
					<t t-set="sequense" t-value="receipt.name.split('Order')"/>
	                <img t-att-src="'/report/barcode/Code128/'+ sequense[1]" style="width:200px;height:50px" alt="Barcode"/>
	            </div>
	            <div class="after-footer">
	                <t t-foreach="receipt.paymentlines" t-as="line" t-key="line_index">
	                    <t t-if="line.ticket">
	                        <br />
	                        <div class="pos-payment-terminal-receipt">
	                            <t t-raw="line.ticket" />
	                        </div>
	                    </t>
	                </t>
	            </div>
	        </div>
        </xpath>
    </t>
    
    <t t-name="OrderLineReceipt" t-inherit="point_of_sale.OrderLinesReceipt" t-inherit-mode="extension" owl="1">
    	<xpath expr="//t[@t-key='line.id']" position="replace">
    		<table class="" style="border: 1px solid black;">
    			<thead>
    				<tr style="border: 1px solid black;">
	    				<th style="width:90%;border: 1px solid black;"><div>Item</div>
	    					<div>الصننف</div>
	    				</th>
	    				<th style="border: 1px solid black;" class="text-right"><div>Total</div>
	    					<div>المجموع</div>
	    				</th>
    				</tr>
    			</thead>
    			<tbody>
		    		<t t-foreach="receipt.orderlines" t-as="line" t-key="line.id">
		            	<tr style="border: 1px solid black;">
		            		<t t-if="isSimple(line)">
			            		<td style="border: 1px solid black;">
									<div>
										<t t-if="line.reference">
											[<t t-esc="line.reference"/>]
										</t>
					                    <t t-esc="line.product_name_wrapped[0]" />
				                    </div>
				                    <div t-if="line.product_name_wrapped[0] != line.product_name_ar" >
				                    	<t t-esc="line.product_name_ar" />
				                    </div>
					                <WrappedProductNameLines line="line" />
			            		</td>
		            		</t>
		            		<t t-else="">
		            			<td>
		            				<div>
										<t t-if="line.reference">
											[<t t-esc="line.reference"/>]
										</t>
										<t t-esc="line.product_name_wrapped[0]"/>
									</div>
		            				<t t-if="line.product_name_wrapped[0] != line.product_name_ar">
		            					<div t-esc="line.product_name_ar" />
		            				</t>
                					<WrappedProductNameLines line="line" />
                					<t t-if="line.display_discount_policy == 'without_discount' and line.price != line.price_lst">
					                    <div class="pos-receipt-left-padding">
					                        <t t-esc="env.pos.format_currency_no_symbol(line.price_lst)" />
					                        ->
					                        <t t-esc="env.pos.format_currency_no_symbol(line.price)" />
					                    </div>
					                </t>
					                <t t-elif="line.discount !== 0">
					                    <div class="pos-receipt-left-padding">
					                        <t t-if="env.pos.config.iface_tax_included === 'total'">
					                            <t t-esc="env.pos.format_currency_no_symbol(line.price_with_tax_before_discount)"/>
					                        </t>
					                        <t t-else="">
					                            <t t-esc="env.pos.format_currency_no_symbol(line.price)"/>
					                        </t>
					                    </div>
					                </t>
					                <t t-if="line.discount !== 0">
					                    <div class="pos-receipt-left-padding">
					                        Discount: <t t-esc="line.discount" />%
					                    </div>
					                </t>
					                <div class="pos-receipt-left-padding">
					                    <t t-esc="Math.round(line.quantity * Math.pow(10, env.pos.dp['Product Unit of Measure'])) / Math.pow(10, env.pos.dp['Product Unit of Measure'])"/>
					                    <t t-if="!line.is_in_unit" t-esc="line.unit_name" />
					                    x
					                    <t t-esc="env.pos.format_currency(line.price_display_one)" />
					                    <!-- <span class="price_display pos-receipt-right-align">
					                        <t t-esc="env.pos.format_currency_no_symbol(line.price_display)" />
					                    </span> -->
					                </div>
					                <t t-if="line.customer_note">
						                <div class="pos-receipt-left-padding pos-receipt-customer-note">
						                    <t t-esc="line.customer_note"/>
						                </div>
						            </t>
						            <t t-if="line.pack_lot_lines">
						                <div class="pos-receipt-left-padding">
						                    <ul>
						                        <t t-foreach="line.pack_lot_lines" t-as="lot" t-key="lot.cid">
						                            <li>
						                                SN <t t-esc="lot.attributes['lot_name']"/>
						                            </li>
						                        </t>
						                    </ul>
						                </div>
						            </t>
		            			</td>
		            		</t>
		            		<td style="border: 1px solid black;" class="text-center">
			                    <span t-esc="env.pos.format_currency_no_symbol(line.price_display)" class="price_display pos-receipt-right-align"/>
		            		</td>
		            	</tr>
		            </t>
    			</tbody>
	        </table>
    	</xpath>
    </t>
</templates>
